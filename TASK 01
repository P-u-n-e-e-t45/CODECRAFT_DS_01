import pandas as pd
import matplotlib.pyplot as plt
import seaborn as sns
import random

# List of 50 countries (sample world countries)
countries = [
    "India","USA","China","Brazil","Russia","Japan","Germany","UK","France","Italy",
    "Canada","Australia","Mexico","South Africa","Nigeria","Egypt","Spain","Turkey","Argentina","Chile",
    "Colombia","Peru","Saudi Arabia","UAE","Iran","Iraq","Pakistan","Bangladesh","Sri Lanka","Nepal",
    "Thailand","Vietnam","Malaysia","Singapore","Indonesia","Philippines","South Korea","North Korea","Israel","Jordan",
    "Kenya","Ethiopia","Morocco","Algeria","Sudan","Poland","Ukraine","Sweden","Norway","Denmark"
]

# Generate synthetic dataset
data = {
    "Country": [random.choice(countries) for _ in range(500)],   # 500 random people
    "Gender": [random.choice(["Male","Female"]) for _ in range(500)],
    "Age": [random.randint(15, 70) for _ in range(500)]          # Ages between 15â€“70
}
df = pd.DataFrame(data)

# --------------------------
# Bar Chart: Gender by Country
# --------------------------
plt.figure(figsize=(14,6))
sns.countplot(x="Country", hue="Gender", data=df, palette="pastel", order=df["Country"].value_counts().index)
plt.title("Gender Distribution by Country")
plt.xticks(rotation=90)
plt.xlabel("Country")
plt.ylabel("Count")
plt.show()

# --------------------------
# Histogram: Age Distribution by Country
# --------------------------
plt.figure(figsize=(10,6))
sns.histplot(data=df, x="Age", hue="Country", multiple="stack", bins=20)
plt.title("Age Distribution Across Countries")
plt.xlabel("Age")
plt.ylabel("Frequency")
plt.show()
